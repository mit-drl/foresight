<?xml version="1.0"?>
<launch>
    <arg name="camera_name" default="camera"/>
    <arg name="index" default="0"/>
    <arg name="camera_info_url" default="file://$(find foresight)/param/camera.yaml"/>

    <group ns="$(arg camera_name)">
        <node pkg="libuvc_camera" type="camera_node" name="$(arg camera_name)" output="screen">
            <!-- Parameters used to find the camera -->
            <param name="vendor" value="0x05a3"/>
            <param name="product" value="0x9230"/>
            <param name="serial" value="0"/>
            <!-- If the above parameters aren't unique, choose the first match: -->
            <param name="index" value="$(arg index)"/>

            <!-- Image size and type -->
            <param name="width" value="640"/>
            <param name="height" value="480"/>
            <!-- choose whichever uncompressed format the camera supports: -->
            <param name="video_mode" value="mjpeg"/> <!-- or yuyv/nv12/jpeg -->
            <param name="frame_rate" value="120"/>
            <param name="frame_id" value="$(arg camera_name)"/>

            <param name="timestamp_method" value="start"/> <!-- start of frame -->
            <param name="camera_info_url" value="$(arg camera_info_url)"/>
            <param name="frame_id" value="$(arg camera_name)"/>

            <param name="auto_exposure" value="0"/>
            <param name="auto_exposure_priority" value="0"/>
            <param name="exposure_absolute" value="0.004"/>
            <param name="auto_white_balance" value="false"/>
        </node>
        <node pkg="image_proc" type="image_proc" name="image_proc"/>
    </group>
</launch>
