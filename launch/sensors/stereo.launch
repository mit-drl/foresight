<?xml version="1.0"?>
<launch>
    <group ns="stereo">
        <include file="$(find foresight)/launch/sensors/camera.launch">
            <arg name="camera_name" value="right"/>
            <arg name="product" value="0x9601"/>
            <arg name="frame_rate" value="60"/>
            <arg name="width" value="640"/>
            <arg name="height" value="360"/>
            <arg name="camera_info_url" default="file://$(find foresight)/param/right.yaml"/>
            <arg name="exposure_absolute" value="0.008"/>
        </include>
        <include file="$(find foresight)/launch/sensors/camera.launch">
            <arg name="camera_name" value="left"/>
            <arg name="product" value="0x9602"/>
            <arg name="frame_rate" value="60"/>
            <arg name="width" value="640"/>
            <arg name="height" value="360"/>
            <arg name="camera_info_url" default="file://$(find foresight)/param/left.yaml"/>
            <arg name="exposure_absolute" value="0.008"/>
        </include>
        <node pkg="stereo_image_proc" type="stereo_image_proc" name="stereo_image_proc"/>
    </group>
</launch>
