<?xml version="1.0"?>
<launch>

    <include file="$(find hector_gazebo_worlds)/launch/start.launch"/>

    <arg name="base"      value="$(optenv TURTLEBOT_BASE kobuki)"/> <!-- create, roomba -->
    <arg name="battery"   value="$(optenv TURTLEBOT_BATTERY /proc/acpi/battery/BAT0)"/>  <!-- /proc/acpi/battery/BAT0 --> 
    <arg name="gui" default="true"/>
    <arg name="stacks"    value="$(optenv TURTLEBOT_STACKS hexagons)"/>  <!-- circles, hexagons --> 
    <arg name="3d_sensor" value="$(optenv TURTLEBOT_3D_SENSOR kinect)"/>  <!-- kinect, asus_xtion_pro --> 

    <include file="$(find turtlebot_gazebo)/launch/includes/$(arg base).launch.xml" ns="turtlebot">
        <arg name="base" value="$(arg base)"/>
        <arg name="stacks" value="$(arg stacks)"/>
        <arg name="3d_sensor" value="$(arg 3d_sensor)"/>
    </include>

    <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch" ns="quadrotor">
        <arg name="model" value="$(find hector_quadrotor_description)/urdf/quadrotor_hokuyo_utm30lx.gazebo.xacro"/>
        <arg name="x" value="0.0"/>
        <arg name="y" value="0.0"/>
        <arg name="z" value="0.8"/>
        <arg name="name" value="quadrotor"/>
    </include>

    <!-- <include file="$(find foresight)/launch/util/xbox_controller.launch"> -->
    <!--     <arg name="cmd_vel_topic" value="/quadrotor/cmd_vel"/> -->
    <!-- </include> -->
</launch>
