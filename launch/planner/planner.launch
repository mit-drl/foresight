<?xml version="1.0"?>
<launch>
    <arg name="car_frame_id" default="car/base_link"/>
    <arg name="quad_frame_id" default="base_link"/>
    <arg name="camera_frame_id" default="camera_base_link"/>

    <node pkg="foresight" type="blind_spots.py" name="blind_spots"
        output="screen">
        <param name="scan_break_thresh" value="1.0"/>

        <!-- Frame ids -->
        <param name="map_frame" value="$(arg car_frame_id)"/>
        <param name="quad_frame" value="$(arg quad_frame_id)"/>
        <param name="camera_frame" value="$(arg camera_frame_id)"/>
    </node>

    <node pkg="foresight" type="info_planner.py" name="info_planner"
        output="screen">
        <param name="optimality_threshold" value="0.7"/>
        <param name="max_execution_time" value="5.0"/>
        <param name="max_speed" value="1.0"/>
        <param name="timeout" value="0.2"/>
        <param name="neighbour_dist" value="0.3"/>
        <param name="fov_v" value="0.628"/>
        <param name="fov_h" value="0.628"/>
        <param name="altitude" value="1.0"/>
        <param name="wait_time" value="2.0"/>

        <!-- Frame ids -->
        <param name="map_frame" value="$(arg car_frame_id)"/>
        <param name="quad_frame" value="$(arg quad_frame_id)"/>
        <param name="camera_frame" value="$(arg camera_frame_id)"/>
    </node>

</launch>
